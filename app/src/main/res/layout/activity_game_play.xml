<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePlay"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrow0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/arrow3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrow1" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/arrow3"
        app:layout_constraintEnd_toEndOf="@+id/arrow0"
        app:layout_constraintStart_toStartOf="@+id/arrow2"
        app:layout_constraintTop_toTopOf="@+id/arrow1" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/arrow0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/touch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/generic_confirmation"
        app:layout_constraintBottom_toBottomOf="@+id/arrow3"
        app:layout_constraintEnd_toEndOf="@+id/arrow0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/arrow2"
        app:layout_constraintTop_toTopOf="@+id/arrow1"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>